# Trading signals configuration
# Copy this file to .env and update with your values

# Strategy configuration
STRATEGY_NAMES=xxx
SERVER_URLS=localhost,192.168.1.100

# Volume filter settings
MIN_DAILY_VOLUME=500000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# WebSocket configuration
WS_URL=wss://stream.bybit.com/v5/public/linear
MAX_CONNECTIONS=12
MAX_COINS_PER_CONNECTION=20

# HTTP request timeouts (seconds)
HTTP_TIMEOUT=30
CONNECT_TIMEOUT=10

# Signal processing settings
SIGNAL_UPDATE_INTERVAL=0.3
TRADES_BUFFER_SECONDS=20

# Trading bot ports (comma separated if multiple servers)
BOT_PORTS=3001